{{!-- friends list on the right with name and code and a check in one card
a wish list showing the items
--}}
<div class="row main-row">
    <div class="col-12">
        <div class="main-card">
            <div class="d-flex p-2 px-5 justify-content-center">
                <h2>{{friend.username}}'s Wishlist</h2>
            </div>
            <div class="mx-5 text-center">
                <h3>Go ahead and make your friend's wish come true!
                </h3>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card main-card p-3">
            <div class="row">
                {{#each friend.Items as |item|}}
                {{> card friend=true}}
                {{/each}}
            </div>
        </div>
    </div>
</div>
{{!-- link to friend's list javascript --}}